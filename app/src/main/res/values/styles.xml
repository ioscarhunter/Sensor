<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorPrimary">@color/blue_500</item>

        <item name="colorAccent">@color/deep_orange500</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/grey_700</item>
        <item name="colorPrimary">@color/grey_500</item>

        <item name="colorAccent">@color/white_pure</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/grey_900</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="intro" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorPrimary">@color/blue_500</item>

        <item name="colorAccent">@color/deep_orange500</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="intro.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
