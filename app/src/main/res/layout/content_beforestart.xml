<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.starboy.karav.sensor.BeforeStart.Beforestart"
    tools:showIn="@layout/activity_beforestart"
    >

    <ScrollView
        android:id="@+id/ScrollView01"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="@dimen/cardwidthsize"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_cardexpand"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginTop="10dp"
                android:paddingBottom="@dimen/card_padding"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:paddingTop="@dimen/card_padding"
                android:background="@color/clear">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Deep_Purple_300">

                    <FrameLayout
                        android:id="@+id/detailsetting1"
                        android:name="com.starboy.karav.sensor.BeforeStart.detailsetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:background="@color/white_pure"
                        tools:layout="@layout/fragment_detailsetting"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_cardexpand"
                        android:text="Four Directions"
                        android:id="@+id/object1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/Deep_Purple_300"
                        android:textColor="@color/white_pure"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/titleSize"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="@dimen/card_margin_top"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_cardexpand"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card1"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:paddingBottom="@dimen/card_padding"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:paddingTop="@dimen/card_padding"
                android:background="@color/clear">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Deep_Purple_300">

                    <FrameLayout
                        android:id="@+id/detailsetting2"
                        android:name="com.starboy.karav.sensor.BeforeStart.detailsetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:background="@color/white_pure"
                        tools:layout="@layout/fragment_detailsetting"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_cardexpand"
                        android:text="Two Directions"
                        android:id="@+id/object2"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/Deep_Purple_300"
                        android:textColor="@color/white_pure"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/titleSize"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="@dimen/card_margin_top"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card3"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card2"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:paddingBottom="@dimen/card_padding"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:paddingTop="@dimen/card_padding"
                android:background="@color/clear">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Deep_Purple_300">

                    <FrameLayout
                        android:id="@+id/detailsetting3"
                        android:name="com.starboy.karav.sensor.BeforeStart.detailsetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:background="@color/white_pure"
                        tools:layout="@layout/fragment_detailsetting"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_cardexpand"
                        android:text="One Direction"
                        android:id="@+id/object3"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/Deep_Purple_300"
                        android:textColor="@color/white_pure"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/titleSize"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="@dimen/card_margin_top"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/card3"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/card_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:paddingBottom="@dimen/card_padding"
                android:paddingLeft="@dimen/card_padding"
                android:paddingRight="@dimen/card_padding"
                android:paddingTop="@dimen/card_padding"
                android:id="@+id/card4"
                android:background="@color/clear">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Deep_Purple_300">

                    <FrameLayout
                        android:id="@+id/detailsetting4"
                        android:name="com.starboy.karav.sensor.BeforeStart.detailsetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp"
                        android:background="@color/white_pure"
                        tools:layout="@layout/fragment_detailsetting"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/min_cardexpand"
                        android:text="Static"
                        android:id="@+id/object4"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:background="@color/Deep_Purple_300"
                        android:textColor="@color/white_pure"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/titleSize"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:paddingLeft="@dimen/card_margin_top"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
