<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BeforeStart.ModeSelectActivity"
    tools:showIn="@layout/activity_mode_select">

    <android.support.v7.widget.CardView
        android:id="@+id/sender"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_cardexpand"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginTop="10dp"
        android:paddingBottom="@dimen/card_padding"
        android:paddingLeft="@dimen/card_padding"
        android:paddingRight="@dimen/card_padding"
        android:paddingTop="@dimen/card_padding"
        android:background="@color/clear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Deep_Purple_300">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/min_cardexpand"
                android:text="Sender"
                android:id="@+id/sender_butt"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/Deep_Purple_300"
                android:textColor="@color/white_pure"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/titleSize"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/card_margin_top" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_cardexpand"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/card_padding"
        android:paddingLeft="@dimen/card_padding"
        android:paddingRight="@dimen/card_padding"
        android:paddingTop="@dimen/card_padding"
        android:background="@color/clear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sender">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Deep_Purple_300">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/min_cardexpand"
                android:text="Receiver"
                android:id="@+id/receiver_butt"
                android:background="@color/Deep_Purple_300"
                android:textColor="@color/white_pure"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/titleSize"
                android:paddingLeft="@dimen/card_margin_top"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
