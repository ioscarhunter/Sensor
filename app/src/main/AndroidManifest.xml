<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.starboy.karav.sensor">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Meter.Meter"
            android:label="@string/app_name"
            android:theme="@style/DarkTheme"></activity>
        <activity
            android:name=".BeforeStart.BeforeStart"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Summary"
            android:label="@string/title_activity_summary"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".Meter.staticMode"
            android:label="@string/title_activity_static_mode"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
